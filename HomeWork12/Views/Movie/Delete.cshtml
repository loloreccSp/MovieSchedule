@model Movie

@{
    ViewData["Title"] = "Delete";
}

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Movie</h2>
    </div>

    <form method="post" asp-action="DeleteMovie">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Id">Movie Id</label>
                <input type="number" class="form-control mb-3" asp-for="Id" placeholder="Enter id" required>
                <span asp-validation-for="Id" class="alert-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Delete</button>
        <a asp-controller="Movie" asp-action="Index" class="btn btn-lg btn-warning p-2">Back</a>
    </form>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

